{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "es2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "forceConsistentCasingInFileNames": true,

    "types": ["node"],                    // ðŸ‘ˆ aÃ±ade tipos de Node (Ãºtil en scripts, process.env, etc.)
    "baseUrl": ".",                       // ðŸ‘ˆ base para alias
    "paths": { "@/*": ["./*"] },          // ðŸ‘ˆ alias @

    "plugins": [{ "name": "next" }]       // ðŸ‘ˆ plugin oficial de Next
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
